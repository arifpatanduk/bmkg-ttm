generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}


model City {
  id String @id @default(uuid())
  name String
  lat String
  lon String

  solarDatas SolarData[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SolarData {
  id String @id @default(uuid())
  
  cityId String
  city City @relation(fields: [cityId], references: [id], onDelete: Cascade)

  date DateTime 
  sunrise String
  sunset String
  dawn String
  dusk String
  transit String
  transitAzimuth String
  riseAzimuth String
  setAzimuth String
  createdAt DateTime @default(now())

  @@index([cityId])
}